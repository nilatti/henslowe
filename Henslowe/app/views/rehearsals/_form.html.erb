<%= semantic_form_for [@production, @rehearsal] do |f| %>
<%= f.inputs do %>
		<%= f.input :actors, :as => :check_boxes, :collection => @production.users.actor.uniq %>
		<%= f.input :start_time, :as => :datetime_picker, :placeholder => "HH:MM" %>

		to

	  <%= f.input :end_time, :as => :datetime_picker %>
	  <%= f.input :space, :collection => @production.theater.spaces, :default => "TBA" %>
	  <%= f.input :act, :collection => @production.play.acts, :member_label => :act_number %>
	  <%= f.input :scene, :collection => @production.play.scenes, :member_label => :full_path %>
	  <%= f.input :french_scene, :collection => @production.play.french_scenes, :member_label => :full_path %>

	  <% end %>
  <%= f.actions %>
<% end %>
