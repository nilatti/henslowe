<% title 'Authors' %>

<table class="table-striped" cellpadding="4">
  <tr>
    <th>Name</th>
    <th>Birth date</th>
    <th>Death date</th>
    <th>Bio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @authors.each do |author| %>
  <tr>
    <td><%= author.name %></td>
    <td><%= author.birth_date %></td>
    <td><%= author.death_date %></td>
    <td><%= author.bio %></td>
    <td><%= link_to 'Show', author %></td>
    <td><%= link_to 'Edit', edit_author_path(author) %></td>
    <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

