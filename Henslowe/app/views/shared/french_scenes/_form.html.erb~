<%= semantic_form_for [(@scene, @french_scene)] do |f| %>
  <p>
    <%= f.inputs do %>
      <%= f.input :french_scene_number %>
      <%= f.input :characters, :as => :check_boxes, :collection => Character.find(:all, :conditions => { :play_id => @french_scene.play_id }) %>
    <% end %>
  </p>
  <p><%= f.actions %></p>
<% end %>
