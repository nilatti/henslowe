<% title ("All Users") %>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Birthdate</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.first_name %> <%=h user.last_name%></td>
    <td><%=h user.bio %></td>
    <td><%=h user.birthdate %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

