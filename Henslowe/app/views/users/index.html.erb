<% title ("All Users") %>

<table class="table-striped">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Birthdate</th>
    <th>Hire Date</th>
    <th>Email</th>
    <th>Cal ID</th>
    <th>Actor?</th>
  </tr>

<% @users.each do |user| %>
 <tr>
    <td><img src="<%= user.image %>"></td>
    <td><%= link_to "#{user.name}", user %></td>
    <td><%=h user.date_of_birth %></td>
    <td><%=h user.hire_date %></td>
    <td><%= mail_to "#{user.email}" %></td>
    <td><%= user.calendar %></td>
    <td><% if User.actor.include?(user) %>YES<% end %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-info btn-xs' %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-danger btn-xs' %></td>
  </tr>
<% end %>
</table>

<br />

 <%= link_to new_user_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New User
<% end %>
